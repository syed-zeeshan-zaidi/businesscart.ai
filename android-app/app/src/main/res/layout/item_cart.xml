<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="?android:attr/selectableItemBackground"
    android:minHeight="72dp">

    <!-- Product Name -->
    <TextView
        android:id="@+id/cartItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Product Name"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:maxLines="2"
        android:ellipsize="end"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/cartItemPrice" />

    <!-- Price -->
    <TextView
        android:id="@+id/cartItemPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$10.00"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="@id/cartItemName"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Quantity label -->
    <TextView
        android:id="@+id/cartItemQuantityLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Qty:"
        android:textSize="14sp"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/cartItemName"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Clickable quantity badge (flat) -->
    <TextView
        android:id="@+id/cartItemQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:paddingVertical="4dp"
        android:text="1"
        android:textSize="16sp"
        android:textColor="#000000"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintStart_toEndOf="@id/cartItemQuantityLabel"
        app:layout_constraintTop_toTopOf="@id/cartItemQuantityLabel"
        app:layout_constraintBottom_toBottomOf="@id/cartItemQuantityLabel"/>

    <!-- Red "Remove" -->
    <TextView
        android:id="@+id/removeCartItemButton"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:gravity="center"
        android:paddingHorizontal="12dp"
        android:text="Remove"
        android:textColor="#FF5252"
        android:textSize="14sp"
        android:background="?attr/selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/cartItemQuantity"
        app:layout_constraintBottom_toBottomOf="@id/cartItemQuantity" />

</androidx.constraintlayout.widget.ConstraintLayout>